<div class="friend-item d-flex align-items-center mb-3 p-3 position-relative">
  <%= link_to remove_friend_path(friend.username), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this friend?"}, class: "position-absolute", style: "top: 1px; left: 1px; z-index: 1050;" do %>
    <button class="btn btn-link text-danger">
      <i class="fas fa-trash trash-can-icon"></i>
    </button>
  <% end %>
  <%= link_to friend_profile_path(friend.username), class: "d-flex align-items-center flex-grow-1 text-decoration-none text-dark" do %>
    <div class="friend-avatar me-3">
      <%= image_tag "class_avatars/#{friend.current_class.hero_class.name.downcase}-avatar.png", class: "avatar" %>
    </div>
    <div class="friend-info flex-grow-1">
      <h5 class="mb-1"><%= friend.username.capitalize %></h5>
      <p class="mb-0 text-muted">Level <%= friend.current_class.level %> <%= friend.current_class.hero_class.name %></p>
    </div>
    <div class="other-classes d-flex flex-column align-items-center ms-3 gap-2">
      <% friend.user_classes.where.not(id: friend.current_class.id).each do |user_class| %>
        <div class="text-center">
          <%= image_tag "class_avatars/#{user_class.hero_class.name.downcase}-avatar.png", class: "class-icon" %>
          <div class="small text-muted">Lvl <%= user_class.level %></div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
