<p>Current user class: <%= @current_user_active_class.class_type %></p>

<p>My other classes:</p>
<% (@current_user_classes - [@current_user_active_class]).each do |user_class| %>
  <p><%= user_class.class_type %></p>
<% end %>
<p>Add another class:</p>
<% UserClass.where(class_type: @all_class_types).each do |other_class| %>
  <p>
    <%= other_class.class_type %>
    <%= link_to other_class.class_type, user_classes_path(other_class.id), method: :post %>
  </p>
<% end %>
