<p>Current user class: <%= current_user.current_class.name %></p>

<p>My other classes:</p>
<% current_user.inactive_classes.each do |user_class| %>
  <p><%= user_class.hero_class.name %></p>
<% end %>
<p>Add another class:</p>
<% current_user.available_hero_classes.each do |other_class| %>
  <p>
    <%= link_to other_class.name, user_classes_path(user_class: { hero_class_id: other_class.id }), data: { turbo_method: :post } %>
  </p>
<% end %>
