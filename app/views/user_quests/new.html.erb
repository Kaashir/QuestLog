<div class="container">
  <%= link_to user_quests_path, class: "btn btn-secondary mb-3" do %>
    <i class="fa-solid fa-circle-xmark"></i>
  <% end %>

  <div class="quest-item">
    <%= link_to new_quest_path, class: "btn btn-primary" do %>
    <%# this needs to link somewhere else where we add in the "Add cusotm quest" form %>
      <i class="fa-solid fa-plus"></i>
    <% end %>
  </div>
  <% @quests.each do |quest| %>
    <div class="quest-item">
      <h5><%= quest.title %></h5>
      <p><%= quest.description %></p>
      <p>Category: <%= quest.quest_category.name %></p>
      <p>Frequency: <%= quest.frequency %></p>
      <%= link_to "Add to my quests", user_quests_path(quest_id: quest.id), method: :post, class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
