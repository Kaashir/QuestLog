<div id="<%= dom_id(question) %>" class="question">
  <%= turbo_stream_from dom_id(question) %>

  <p class="user-question" style="display: flex; align-items: flex-start; gap: 8px;">
    <span style="font-size: 1.2em; line-height: 1; font-weight: bold;">-</span>
    <span style="font-weight: bold;"><%= question.user_question %></span>
  </p>
  <p class="ai-answer" style="display: flex; align-items: flex-start; gap: 8px;">
    <span style="font-size: 1.2em; line-height: 1;">-</span>
    <span><%= question.ai_answer || "..." %></span>
  </p>
</div>
