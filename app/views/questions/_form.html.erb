<%= simple_form_for question,
  html: {
    data: {
      controller: "reset-form",
      action: "turbo:submit-end->reset-form#reset"
    }
  } do |f|
%>
  <div class="form-inputs" style="margin: 0;">
    <div style="display: flex; gap: 8px;">
      <%= f.input :user_question,
                  label: false,
                  placeholder: "Ask your question...",
                  wrapper_html: { style: "margin: 0; flex-grow: 1;" },
                  input_html: {
                    style: "height: 36px; padding: 0px 10px; border-radius: 8px; border: 1px solid #ced4da; width: 100%;",
                    onkeydown: "if(event.key === 'Enter') { event.preventDefault(); if(this.value.trim()) this.form.requestSubmit(); }"
                  } %>
      <%= f.button :submit, "Ask",
          onclick: "event.preventDefault(); if(this.form.querySelector('#question_user_question').value.trim()) this.form.requestSubmit();",
          style: "margin-top: 0; background-color: #2A3B6E; color: #fff; border-radius: 8px; height: 36px; border: none; font-size: 1rem; font-family: 'GNF', sans-serif; padding: 0 16px; white-space: nowrap; align-self: flex-start;" %>
    </div>
  </div>
<% end %>
