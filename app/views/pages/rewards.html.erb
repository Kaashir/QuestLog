<div class="container" style="position: relative; min-height: 100vh; background-image: url(<%= asset_path("forest-animated.gif") %>); background-size: cover; background-position: center; background-repeat: no-repeat; background-attachment: fixed;">

    <%= link_to user_quests_path, style: "position: absolute; top: 15px; left: 20px;" do %>
      <%= image_tag "blue_arrow.png", class: "back-button-icon", style: "width: 40px; height: 40px;" %>
    <% end %>
    <h1 class="text-white pt-5"><strong>Special Offers</strong></h1>
      <div class="offer-card d-flex justify-content-between align-items-center">
        <div class="d-flex align-items-center" data-bs-toggle="modal" data-bs-target="#modal-offer_1">
          <div class="offer-image">
            <img src="<%= asset_path("chest.png") %>" alt="Chest" class="img-fluid">
          </div>
          <div class="offer-details">
            <h4 class="mb-0">Basic-Fit Deal</h4>
          </div>
        </div>
        <div class="offer-action">
          <h4 class="mb-0">LOCKED</h4>
      </div>
    </div>
    <%= render "reward_modal_1" %>
  </div>
