<%= link_to user_quests_path, style: "position: fixed; top: 100px; left: 20px; z-index: 1000;" do %>
  <%= image_tag "blue_arrow.png", class: "back-button-icon", style: "width: 40px; height: 40px;" %>
<% end %>

<div class="container"
     style="min-height: 100vh; background-image: url(<%= asset_path("forest-animated.gif") %>); background-size: cover; background-position: center; background-repeat: no-repeat; background-attachment: fixed;">
  <div class="px-3" style="padding-top: 70px; height: calc(100vh - 70px); overflow-y: auto;">
    <h2 class="text-white mb-4">Available Offers</h2>
    <div class="offer-card d-flex justify-content-between align-items-center" data-bs-toggle="modal" data-bs-target="#modal-offer_1">
      <div class="d-flex align-items-center">
        <div class="offer-image">
          <img src="<%= asset_path("chest.png") %>" alt="Chest" class="img-fluid">
        </div>
        <div class="offer-details">
          <h4 class="mb-0"><strong>Basic-Fit Deal</strong></h4>
        </div>
      </div>
      <div class="offer-action">
        <h4 class="mb-0">LOCKED</h4>
      </div>
    </div>
    <div class="modal fade quest-modal" id="modal-offer_1" tabindex="-1" aria-labelledby="modal-offer_1" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content quest-modal-content">
          <button type="button" class="close-button" data-bs-dismiss="modal" aria-label="Close">âœ•</button>
          <div class="quest-icon-wrapper">
            <%= image_tag "BasicFit.png", alt: "Logo", class: "quest-icon" %>
          </div>
          <div class="reward-info">
            <h5 class="quest-title">20% off for 1 month!</h5>
            <div class="quest-description">
              <p>You need to reach level 6 to unlock this reward</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
